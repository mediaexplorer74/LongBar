<Window x:Class="LongBar.Notify"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Notify" Height="150" Width="350" ShowInTaskbar="False" AllowsTransparency="True"
    WindowStyle="None" Background="Transparent" Topmost="True"
    SourceInitialized="Window_SourceInitialized">
    <Window.Resources>
          <DoubleAnimation x:Key="LoadAnim" Storyboard.TargetProperty="Top" Duration="0:0:0.2" AccelerationRatio="0.3"/>
    </Window.Resources>
    <Grid>
            <Rectangle Name="Rectangle1" Stroke="Black" Opacity="1" RadiusX="5" RadiusY="5" />
            <Rectangle Name="Rectangle2" Stroke="#FFAAAAAA" Opacity="1" Margin="1" RadiusX="4" RadiusY="4" />
            <Rectangle Name="Rectangle3" Fill="#FF4B4B4B" Opacity="0.6" Margin="2" RadiusX="3" RadiusY="3" />
            <DockPanel>
                <Grid Width="60">
                    <Image DockPanel.Dock="Left" Width="40" VerticalAlignment="Center" Source="/LongBar;component/Resources/LongBar 2.0 Logo.png" />
                </Grid>
                <DockPanel>
                    <TextBlock Margin="0,3,5,0" Height="20" DockPanel.Dock="Top" TextAlignment="Right" Text="Notify Header" Foreground="White" />
                    <Grid>
                        <Rectangle Name="BgRect" Fill="White" Stroke="Black" RadiusX="5" RadiusY="5" Margin="0,0,3,3"  />
                        <TextBlock Margin="7" Text="(X(X_(O_O)_X)X)"/>
                    </Grid>
                </DockPanel>
            </DockPanel>
        </Grid>
</Window>
